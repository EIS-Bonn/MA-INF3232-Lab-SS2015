<div class="row" id="ds_container">
    <div {{bind-attr class="isToggled:col-md-5:col-md-0"}}>
        <!-- Data Selection -->
        <div class="panel panel-default">
            <div class="panel-heading">
                <h1 class="panel-title pull-left">Explore and Select Data</h1>
            </div>
            <div class="panel-body">
                {{tree-selection treedata=controller.treeContent selection=controller.dataSelection}}
            </div>

            <div class="panel-footer clearfix">
            </div>
        </div>
    </div>
    <div {{bind-attr class="isToggled:col-md-7:col-md-12"}}>

        <!-- Data Selection Preview -->
        <div class="panel panel-default">
            <div class="panel-heading">
                <h1 class="panel-title pull-left">Preview Data Selection</h1>

                <button type="button" class="btn btn-default btn-xs pull-right" {{action 'toggle'}}>
                    {{#if isToggled}}
                    <span class="glyphicon glyphicon-resize-full" aria-hidden="true"></span>
                    {{else}}
                    <span class="glyphicon glyphicon-resize-small" aria-hidden="true"></span>
                    {{/if}}
                </button>

            </div>
            <div class="panel-body">
                {{data-table preview=controller.dataSelection datasource=controller.selectedDatasource}}
            </div>

            <!--Filters-->
            <div class="panel-footer clearfix">
                <h1 class="panel-title pull-left">Filters</h1>
            </div>

            <tr>
                <style>
                    input {
                    padding: 6px 12px;
                    margin-bottom: 0;
                    font-size: 14px;
                    font-weight: normal;
                    line-height: 1.42857143;
                    text-align: center;
                    white-space: nowrap;
                    vertical-align: middle;
                    margin-left: 10px;
                    margin-right: 10px;
                    margin-bottom: 10px;
                    margin-top: 10px;
                    border-color: #ccc;
                    border-bottom-color: rgb(204, 204, 204);
                    border-bottom-left-radius: 4px;
                    border-bottom-right-radius: 4px;
                    border-bottom-style: solid;
                    border-bottom-width: 1.33333337306976px;
                    border-left-color: rgb(204, 204, 204);
                    border-left-style: solid;
                    border-left-width: 1.33333337306976px;
                    border-right-color: rgb(204, 204, 204);
                    border-right-style: solid;
                    border-right-width: 1.33333337306976px;
                    border-top-color: rgb(204, 204, 204);
                    border-top-left-radius: 4px;
                    border-top-right-radius: 4px;
                    border-top-style: solid;
                    border-top-width: 1.33333337306976px;
                    height: 34.6666679382324px;
                    width: 140px
                    }
                </style>

               <style>
                    select {
                    margin-left: 10px;
                    margin-right: 10px;
                    margin-bottom: 10px;
                    margin-top: 10px;
                    overflow: visible;
                    border-color: #ccc;
                    padding: 6px 12px;
                    margin-bottom: 1;
                    font-size: 14px;
                    font-weight: normal;
                    line-height: 1.42857143;
                    text-align: center;
                    white-space: nowrap;
                    vertical-align: middle;
                    -ms-touch-action: manipulation;
                    touch-action: manipulation;
                    cursor: pointer;
                    border: 0.5px solid grey;
                    border-radius: 4px;
                    height: 34.6666679382324px;
                    width: 180.567px;
                    border-bottom-color: rgb(204, 204, 204);
                    border-bottom-left-radius: 4px;
                    border-bottom-right-radius: 4px;
                    border-bottom-style: solid;
                    border-bottom-width: 1.33333337306976px;
                    border-left-color: rgb(204, 204, 204);
                    border-left-style: solid;
                    border-left-width: 1.33333337306976px;
                    border-right-color: rgb(204, 204, 204);
                    border-right-style: solid;
                    border-right-width: 1.33333337306976px;
                    border-top-color: rgb(204, 204, 204);
                    border-top-left-radius: 4px;
                    border-top-right-radius: 4px;
                    border-top-style: solid;
                    border-top-width: 1.33333337306976px;
                     }
                </style>

                <style>
                    label {
                    color: rgb(51, 51, 51);
                    cursor: default;
                    font-family: 'Helvetica Neue', Helvetica, Arial, sans-serif;
                    font-size: 13.3333330154419px;
                    font-weight: bold;
                    }
                </style>

                <select name ="Tree values" id="filterSelect">
                    <option value="Select Column">Select Column</option>
                </select>

                <label>Min:</label>
                <td><input type="text" id="min" name="min"></td>

                <label>Max:</label>
                <td><input type="text" id="max" name="max"></td>
            </tr>

            <!--Filters-->

            <div class="panel-footer clearfix">
                <button type="button" class="btn btn-default pull-right" {{action 'visualize'}}>
                    <span class="glyphicon glyphicon-stats" aria-hidden="true"></span>   Visualize
                </button>
            </div>
        </div>
    </div>
</div>
